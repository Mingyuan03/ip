<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<!-- alignment=TOP_LEFT for VBox below-->
<VBox alignment="CENTER" spacing="10"
      maxWidth="Infinity" maxHeight="Infinity"
      prefWidth="400" prefHeight="500"
      stylesheets="@../css/help-box.css"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <Label fx:id="helpMessage" wrapText="true" maxWidth="Infinity" maxHeight="Infinity"
           VBox.vgrow="ALWAYS" styleClass="help-message"/>
    <Button fx:id="exitButton" text="Close" styleClass="exit-button"/>
</VBox>
